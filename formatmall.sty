% Environment for songs
\newcounter{song}[section]
\renewcommand*{\thesong}{%
    \ifnum\value{song}=0 \fi
    \ifnum\value{song}>0 \arabic{song}\fi
}
\newenvironment{song}[2]{
	\begin{flushleft}
		\stepcounter{song}\phantomsection\label{#2}\huge
		\Alph{section}.\thesong \ifnum\value{song}>0 . \fi \ifnum\value{song}=0 \vspace{0.5cm} \fi #1\index{#1 @#1, \Alph{section}.\thesong, #2}
	\end{flushleft}\vspace{-0.5cm}
}{\vspace{0.5cm}}

